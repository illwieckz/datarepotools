if [ "${1}" = '-q' ]
then
	exec 1>/dev/null
	exec 2>/dev/null
	shift
fi

force_conversion='false'
if [ "${1}" = '-f' ]
then
	force_conversion='true'
	shift
fi

keep_original='false'
if [ "${1}" = '-k' ]
then
	keep_original='true'
	shift
fi

file_name="${1}"

if [ -z "${TMPDIR}" ]
then
	temp_dir="$(mktemp -d "/tmp/drt-blob2png-XXXXXXXX}")"
else
	temp_dir="$(mktemp -d "${TMPDIR}/drt-blob2png-XXXXXXXX")"
fi

[ -z "${file_name}" ] && exit
[ ! -f "${file_name}" ] && exit

_convert () {
	temp_out="$(mktemp "${temp_dir}/out-XXXXXXXX.txt")"
	if convert "${1}" "${2}" >"${temp_out}" 2>&1
	then
		if grep -q 'lossy' "${temp_out}"
		then
			printf 'lossy'
		fi
	else
		printf 'failure'
	fi
	touch -r "${1}" "${2}"
	rm "${temp_out}"
}

_blob2png () {
	orig_file="${1}"
	newname="$(echo "${orig_file}" | sed -e 's/\.webp$/.png/;s/\.tga/.png/;s/\.bmp$/.png/')"
	temp_file="$(mktemp "${temp_dir}/blob-XXXXXXXX.png")"
	
	do_convert='false'
	output="$(_convert "${orig_file}" "${temp_file}")"
	if [ "${output}" = 'failure' ]
	then
		printf 'conversion failed\n'
	elif [ "${result}" != "lossy" ]
	then
		do_convert='true'
	elif "${force_conversion}"
	then
		echo "lossy: force conversion"
		do_convert='true'
	else
		echo "lossy: do not convert to png, use -f to force conversion"
	fi

	if "${do_convert}"
	then
		do_convert='true'
		cp -avn "${temp_file}" "${newname}"
		if "${keep_original}"
		then
			echo "keep original: ${orig_file}"
		else
			rm -v "${orig_file}"
		fi
	fi

	rm "${temp_file}"
}

_testfmt () {
	file -b "${1}" | grep -q "${2}"
}

echo "${file_name}"

if _testfmt "${file_name}" 'Web/P image'
then
	_blob2png "${file_name}"
elif _testfmt "${file_name}" 'PC bitmap'
then
	_blob2png "${file_name}"
elif _testfmt "${file_name}" 'Targa image data'
then
	_blob2png "${file_name}"
elif strings "${file_name}" | grep -q 'TRUEVISION-XFILE'
then
	echo "bizarre tga format: convert anyway"
	_blob2png "${file_name}"
# elif "${force_conversion}"
# then
#	echo "unknown: force conversion"
#	_blob2png "${file_name}"
fi

rmdir "${temp_dir}"

#EOF
